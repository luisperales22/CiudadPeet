<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <ImageView
        android:id="@+id/imgFondoPerfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fondoperro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/filterViewPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil ðŸ¶"
            android:textColor="#FF9800"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"/>

        <ImageView
            android:id="@+id/imgFotoAvatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_cuidadorperfil"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:id="@+id/tvRangoCuidador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuidador Estrella"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEstadisticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paseos completados: 15 ðŸŽ‰"
            android:textColor="#B0BEC5"
            android:textSize="17sp"
            android:layout_marginTop="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CERRAR SESIÃ“N"
            android:textSize="17sp"
            android:textStyle="bold"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="30dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>